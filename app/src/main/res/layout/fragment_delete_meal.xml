<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deletemealfragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteMealFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="227dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="340dp"
        android:gravity="center"
        android:shadowColor="#535353"
        android:shadowDx="6"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="Delete a Meal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/deleteItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemName2"
        android:layout_width="269dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:hint="Name of item"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/deleteItem"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Delete"
        app:layout_constraintBottom_toTopOf="@+id/backToMealPlanner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/backToMealPlanner2"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="147dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteItem" />

</androidx.constraintlayout.widget.ConstraintLayout>